<resources>
    <!-- Base application theme. -->
    <style name="Theme.TaskSchedulerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDarkMode</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorDarkMode</item>
        <item name="colorOnPrimary">@color/secondaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--Text Color-->
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:timePickerDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:colorPrimary">@color/secondaryTextColor</item>
        <item name="android:colorAccent">@color/secondaryTextColor</item>
    </style>
</resources>